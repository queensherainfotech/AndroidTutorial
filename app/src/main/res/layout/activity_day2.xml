<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10sp"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchOnOff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toggleButton"
        android:layout_margin="10sp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdgFruits"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/switchOnOff">
        <RadioButton
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/rdbMango"
            android:text="Mango"
            android:textSize="18sp"
            android:layout_margin="5sp"/>
        <RadioButton
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/rdbPineapple"
            android:text="Pineapple"
            android:textSize="18sp"
            android:layout_margin="5sp"/>
        <RadioButton
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:id="@+id/rdbGrapes"
            android:text="Grapes"
            android:textSize="18sp"
            android:layout_margin="5sp"/>
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheckFruit"
        android:text="Check fruit"
        android:layout_below="@id/rdgFruits"
        android:layout_centerHorizontal="true"
        android:layout_margin="5sp"/>
</RelativeLayout>
